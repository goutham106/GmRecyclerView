<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/view_layout_modes_divider" />

    <com.gm.grecyclerview.GmRecyclerView
        android:id="@+id/linearVerRecyclerView"
        android:layout_width="match_parent"
        android:background="@color/colorAccent"
        android:layout_height="match_parent"
        app:grv_layoutMode="linearVertical"
        app:grv_showDivider="true"
        app:grv_dividerPaddingLeft="16dp" />

    <com.gm.grecyclerview.GmRecyclerView
        android:id="@+id/linearHorRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        app:grv_layoutMode="linearHorizontal"
        app:grv_showDivider="true"
        app:grv_dividerPaddingTop="16dp"
        app:grv_dividerPaddingBottom="16dp" />

    <com.gm.grecyclerview.GmRecyclerView
        android:id="@+id/gridRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:grv_layoutMode="grid"
        app:grv_gridSpanCount="3"
        app:grv_showDivider="true"
        app:grv_dividerColor="@color/colorPrimary"
        app:grv_dividerOrientation="horizontal" />

    <com.gm.grecyclerview.GmRecyclerView
        android:id="@+id/gridSequenceRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:grv_layoutMode="grid"
        app:grv_gridSpanSequence="123456"
        app:grv_showDivider="true"
        app:grv_dividerColor="@color/colorPrimary"
        app:grv_showLastDivider="true" />

</LinearLayout>
