<resources>
    <declare-styleable name="grv_GRecyclerView">
        <attr name="grv_layoutMode" format="enum">
            <enum name="linearVertical" value="0" />
            <enum name="linearHorizontal" value="1" />
            <enum name="grid" value="2" />
        </attr>
        <attr name="grv_gridSpanCount" format="integer|reference" />
        <attr name="grv_gridSpanSequence" format="string|reference" />
        <attr name="grv_spacing" format="dimension|reference" />
        <attr name="grv_verticalSpacing" format="dimension|reference" />
        <attr name="grv_horizontalSpacing" format="dimension|reference" />
        <attr name="grv_isSpacingIncludeEdge" format="boolean|reference" />
        <attr name="grv_showDivider" format="boolean|reference" />
        <attr name="grv_showLastDivider" format="boolean|reference" />
        <attr name="grv_dividerOrientation" format="enum">
            <enum name="vertical" value="0" />
            <enum name="horizontal" value="1" />
            <enum name="both" value="2" />
        </attr>
        <attr name="grv_dividerColor" format="color|reference" />
        <attr name="grv_dividerPaddingLeft" format="dimension|reference" />
        <attr name="grv_dividerPaddingRight" format="dimension|reference" />
        <attr name="grv_dividerPaddingTop" format="dimension|reference" />
        <attr name="grv_dividerPaddingBottom" format="dimension|reference" />
        <attr name="grv_emptyStateView" format="integer|reference" />
        <attr name="grv_showEmptyStateView" format="boolean|reference" />
        <attr name="grv_loadMoreView" format="integer|reference" />
        <attr name="grv_snappy" format="boolean|reference" />
        <attr name="grv_snap_alignment" format="enum">
            <enum name="center" value="0" />
            <enum name="start" value="1" />
        </attr>
    </declare-styleable>
</resources>